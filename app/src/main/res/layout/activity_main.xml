<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BAE8D1"
    tools:context=".MainActivity"
    android:weightSum="6">
    <TextView
        android:id="@+id/screen"
        android:gravity="center|right"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#0C0C0C"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:padding="5dp"
        android:layout_marginHorizontal="10dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/ac"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#6A378864"
            android:text="AC"
            android:layout_margin="5dp"
            android:textColor="#FF0000"
            android:textSize="30dp"
            android:onClick="ButtonClick"/>

        <Button
            android:id="@+id/power"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#6A378864"
            android:text="^"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textSize="35dp"
            android:onClick="ButtonClick"/>

        <Button
            android:id="@+id/back"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#6A378864"
            android:text="â¬…"
            android:layout_margin="5dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:onClick="ButtonClick"/>

        <Button
            android:id="@+id/div"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#6A378864"
            android:text="/"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textSize="30dp"
            android:onClick="ButtonClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/seven"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:onClick="ButtonClick"
            android:background="#6A378864"/>
        <Button
            android:id="@+id/eight"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="8"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:background="#6A378864"/>
        <Button
            android:id="@+id/nine"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="9"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:background="#6A378864"/>
        <Button
            android:id="@+id/mul"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="x"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:background="#6A378864"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/four"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:onClick="ButtonClick"
            android:layout_weight="1"
            android:text="4"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:background="#6A378864"/>
        <Button
            android:id="@+id/five"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            android:text="5"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:background="#6A378864"/>
        <Button
            android:id="@+id/six"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="6"
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:background="#6A378864"/>
        <Button
            android:id="@+id/min"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="-"
            android:layout_margin="5dp"
            android:onClick="ButtonClick"
            android:textSize="30dp"
            android:textColor="#000000"
            android:background="#6A378864"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/one"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"

            android:textColor="#000000"
            android:background="#6A378864"/>
        <Button
            android:id="@+id/two"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="2"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:textColor="#000000"
            android:background="#6A378864"/>
        <Button
            android:id="@+id/three"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="3"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:textColor="#000000"
            android:background="#6A378864"/>
        <Button
            android:id="@+id/plus"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="+"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:textColor="#000000"
            android:background="#6A378864"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/zero"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:textColor="#000000"
            android:background="#6A378864"/>
        <Button
            android:id="@+id/point"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="."
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:textColor="#000000"
            android:background="#6A378864"/>
        <Button
            android:id="@+id/ans"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Ans"
            android:layout_margin="5dp"
            android:onClick="ButtonClick"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="#6A378864"/>
        <Button
            android:id="@+id/equal"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="="
            android:onClick="ButtonClick"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:background="#6A378864"/>
    </LinearLayout>
</LinearLayout>